{
	"compileOnSave": true,
	"compilerOptions": {
		"rootDir": "./",
		"target": "es2015",
		"module": "es2015",
		"moduleResolution": "node",
		"lib": [
			"dom",
			"es6",
			"dom.iterable",
			"scripthost"
		],
		"typeRoots": [
			"node_modules/@types"
		],
		"declaration": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"listFiles": true,
		"listEmittedFiles": true,
		"noEmitOnError": true,
		"skipLibCheck": true
	},
	"exclude": ["./test"]
}

