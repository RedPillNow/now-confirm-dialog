{
	"compileOnSave": true,
	"compilerOptions": {
		"target": "es5",
		"noImplicitAny": false,
		"removeComments": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"experimentalDecorators": true,
		"listFiles": true,
		"noEmitOnError": true,
		"declaration": true
	},
	"exclude": [
		"node_modules",
		"bower_components",
		"dist"
	]
}
